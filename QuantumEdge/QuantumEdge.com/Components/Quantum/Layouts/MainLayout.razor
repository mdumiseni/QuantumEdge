@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudTooltip Delay="1000" Text="Search">
            <MudIconButton Icon="@Icons.Material.Rounded.Search" Color="Color.Inherit" Edge="Edge.End" aria-label="Open search dialog" />
        </MudTooltip>
        <MudSpacer/>
        <MudBadge Content="100" Color="Color.Primary" Overlap="true" Class="mx-6 my-4">
            <MudIcon Icon="@Icons.Material.Filled.Email" Color="Color.Secondary" />
        </MudBadge>
        <MudAvatar>
            <MudImage Src="img/default_avatar.png"></MudImage>
        </MudAvatar>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = QuantumTheme.GetQuantumTheme();
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}