@using QuantumEdge.com.Components.Quantum.Shared.Controls
@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Dense="false" Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <SearchInput dataList="@searchTerms"/>
        <MudSpacer/>
        <MudBadge Content="100" Color="Color.Primary" Overlap="true" Class="mx-6 my-4">
            <MudIcon Icon="@Icons.Material.Filled.Email" Color="Color.Secondary" />
        </MudBadge>
        <MudAvatar>
            <MudImage Src="img/default_avatar.png"></MudImage>
        </MudAvatar>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

